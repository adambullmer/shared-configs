{
  "lineWidth": 120,
  "indentWidth": 2,
  "newLineKind": "lf",
  "useTabs": false,

  // Plugin Config
  "biome": {
    "associations": [
      "!package.json", // yarn and biome's expectation of small arrays conflict causing lots of dirty changes often.
      "!*.json", // probably just defer all JSON formatting to the JSON plugin
    ],
  },
  "dockerfile": {},
  "json": {
    "array.preferSingleLine": false,
    "preferSingleLine": false,
    "commentLine.forceSpaceAfterSlashes": true
  },
  "malva": {},
  "markdown": {},
  "markup": {},
  "prettier": {},
  "ruff": {},
  "toml": {},
  "typescript": {},
  "yaml": {},

  // Non-native Configs
  "exec": {
    "commands": []
  },

  // "includes": [],
  "excludes": ["**/node_modules", "**/*-lock.json"],
  "plugins": [
    "https://plugins.dprint.dev/biome-0.6.0.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.2.wasm",
    "https://plugins.dprint.dev/exec-0.5.0.json@8d9972eee71fa1590e04873540421f3eda7674d0f1aae3d7c788615e7b7413d0",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.10.1.wasm",
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.12.0.wasm",
    "https://plugins.dprint.dev/prettier-0.46.1.json@e5bd083088a8dfc6e5ce2d3c9bee81489b065bd5345ef55b59f5d96627928b7a",
    "https://plugins.dprint.dev/ruff-0.3.9.wasm",
    "https://plugins.dprint.dev/toml-0.6.2.wasm",
    "https://plugins.dprint.dev/typescript-0.91.8.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.0.wasm"
  ]
}
